<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tan.savingdata.SecondActivity">


    <Button
        android:id="@+id/btn_intstor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_intcache"
        android:layout_centerHorizontal="true"
        android:onClick="loadIntStorage"
        android:text="Internal Storage" />

    <Button
        android:id="@+id/btn_intcache"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="loadInternalCache"
        android:text="Internal Cache" />

    <Button
        android:id="@+id/btn_extstor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="readExternalStorage"
        android:text="External Storage"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_extpub"
        android:layout_alignStart="@+id/btn_extpub" />


    <Button
        android:id="@+id/btn_shared"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_intstor"
        android:layout_centerHorizontal="true"
        android:onClick="loadPreferences"
        android:text="Shared Preferences" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="callMainActivity"
        android:text="Back"
        android:layout_below="@+id/btn_extpub"
        android:layout_alignLeft="@+id/btn_shared"
        android:layout_alignStart="@+id/btn_shared" />


    <Button
        android:id="@+id/btn_extpub"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="readExternalPublic"
        android:text="External Public"
        android:layout_below="@+id/btn_extstor"
        android:layout_alignLeft="@+id/btn_back"
        android:layout_alignStart="@+id/btn_back" />



</RelativeLayout>
